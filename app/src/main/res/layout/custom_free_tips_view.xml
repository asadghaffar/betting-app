<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/teal_700"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/leagueNameFreeTipsTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/team_name"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/leagueTimeFreeTipsTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center|left"
                    android:text="15:00"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/team1FreeTipsTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/team_name"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/team1GoalFreeTipsTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="4"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="15:00"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/team2GoalFreeTipsTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="5"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="15:00"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/team2FreeTipsTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/team_name"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/predictionFreeTipsTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:fontFamily="sans-serif-black"
                    android:text="1.5 Goals Over"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <View
                    android:layout_gravity="center"
                    android:layout_width="5dp"
                    android:layout_height="9dp"
                    android:background="@color/purple_700" />

                <TextView
                    android:id="@+id/oddsFreeTipsTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="15:00"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <View
                    android:layout_gravity="center"
                    android:layout_width="5dp"
                    android:layout_height="9dp"
                    android:background="@color/purple_700" />

                <TextView
                    android:id="@+id/percentageFreeTipsTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="89%"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <View
                    android:layout_gravity="center"
                    android:layout_width="5dp"
                    android:layout_height="9dp"
                    android:background="@color/purple_700" />

                <FrameLayout
                    android:paddingLeft="10dp"
                    android:layout_weight="1.6"
                    android:layout_width="0dp"
                    android:layout_height="20dp">

                    <ImageView
                        android:id="@+id/imageViewFreeTips"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|left"
                        android:visibility="gone"
                        android:src="@drawable/ic_check" />

                    <TextView
                        android:id="@+id/winLossFreeTipsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-black"
                        android:layout_gravity="center|left"
                        android:text="@string/none"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
